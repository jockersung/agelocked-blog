---
import HeaderLink from './HeaderLink.astro';
---
<header>
  <nav>
    <div class="logo">
      <a href="/"><img src="/agelockedlogo.webp" alt="AGELOCKED" height="44" /></a>
    </div>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
    <div class="nav-right"></div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 2em;
    background: white;
    border-bottom: 1px solid rgba(30, 70, 100, 0.10);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(14px);
  }
  .logo a {
    display: flex;
    align-items: center;
    border-bottom: none;
  }
  .logo img {
    height: 44px;
    width: auto;
    display: block;
  }
  nav {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    height: 60px;
  }
  .internal-links {
    display: flex;
    gap: 0;
    justify-content: center;
  }
  .nav-right {
    display: flex;
    justify-content: flex-end;
  }
  nav a {
    padding: 0 1.2em;
    line-height: 60px;
    color: #3a4a58;
    border-bottom: 3px solid transparent;
    text-decoration: none;
    font-family: 'DM Mono', monospace;
    font-size: 0.78rem;
    letter-spacing: 0.1em;
    transition: color 0.2s;
  }
  nav a:hover {
    color: #1a8c82;
    border-bottom-color: transparent;
  }
  nav a.active {
    color: #1a8c82;
    border-bottom-color: #1a8c82;
  }
</style>
