---
import HeaderLink from './HeaderLink.astro';
---
<header>
  <nav>
    <div class="logo">
      <a href="/"><img src="/agelockedlogo.webp" alt="AGELOCKED" height="44" /></a>
    </div>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
    <div class="nav-right">
      <a href="/search" class="search-link" aria-label="搜尋">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/>
        </svg>
      </a>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 2em;
    background: white;
    border-bottom: 1px solid rgba(30, 70, 100, 0.10);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(14px);
  }
  .logo a {
    display: flex;
    align-items: center;
    border-bottom: none;
  }
  .logo img {
    height: 44px;
    width: auto;
    display: block;
  }
  nav {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    height: 60px;
  }
  .internal-links {
    display: flex;
    gap: 0;
    justify-content: center;
  }
  .nav-right {
    display: flex;
    justify-content: flex-end;
  }
  nav a {
    padding: 0 1.2em;
    line-height: 60px;
    color: #3a4a58;
    border-bottom: 3px solid transparent;
    text-decoration: none;
    font-family: 'DM Mono', monospace;
    font-size: 0.78rem;
    letter-spacing: 0.1em;
    transition: color 0.2s;
  }
  nav a:hover {
    color: #1a8c82;
    border-bottom-color: transparent;
  }
  nav a.active {
    color: #1a8c82;
    border-bottom-color: #1a8c82;
  }
  .search-link {
    display: flex;
    align-items: center;
    padding: 0 0.5em;
    line-height: 60px;
    color: #7a8fa0;
    border-bottom: none !important;
  }
  .search-link:hover {
    color: #1a8c82;
    border-bottom: none !important;
  }

  @media (max-width: 600px) {
    header {
      padding: 0 1em;
    }
    nav {
      height: 52px;
    }
    .logo img {
      height: 34px;
    }
    nav a {
      padding: 0 0.55em;
      font-size: 0.7rem;
      letter-spacing: 0;
      line-height: 52px;
    }
    .search-link {
      padding: 0 0.3em;
      line-height: 52px;
    }
  }
</style>
